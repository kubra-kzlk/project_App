<%- include('./partials/header') %>
<main>
  <%for(let i=0; i< lampDetails.length; i++) { %>
<div class="card" style="max-width: 540px;">
  
  <div class="row g-0">
    <div class="col-md-4  text-center ">
      <img src="<%- lampDetails[i].foto %>" class="img-fluid " >
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%- lampDetails[i].naam %> &#9728;</h5>
        <p class="card-text"></p>
        <p class="card-text"><strong>prijs:</strong>&nbsp; &#8364; <%- lampDetails[i].prijs %></p>
        <p class="card-text"><strong>kleur:</strong>&nbsp;  <%- lampDetails[i].kleur %></p>
        <p class="card-text"><small class="text-body-secondary"><strong>beschikbaar:

        </strong>&nbsp;  <%- lampDetails[i].actief %></small></p>
      </div>
      <div class="card-body">
        <a href="/lamps" class="card-link">Ga terug naar de lijst</a>
      </div>
    </div>
  </div>
</div>
<% } %>
</main>
<%- include('./partials/footer') %>

