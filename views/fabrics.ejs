<%- include('./partials/header') %>
<main class="mainLamps"> 
  <div class="col-sm p-lg-5 mx-auto my-5">
    <table class="table align-middle mb-0 bg-white table-hover">
      <thead >
        <tr>
          <th> </th>
          <th>Naam</th>          
          <th>Adres</th>
          <th>Telefoon</th>
          <th>Website</th>
          <th>Details</th>
        </tr>
      </thead>
      <tbody>
          <% for (let fabric of fabrics) { %>
        <tr>
          <td>
            <div class="d-flex align-items-center">
              <img
                src="<%= fabric.foto %>"
                alt="image" class="rounded"
                style="width: 80px; height: 80px"
              />
              
            </div>
          </td>
          <td > <%= fabric.naam %> </td>
          <td >&#x1F3E3;<%= fabric.adres %></td>
          <td>&#9742; <%= fabric.telefoon %></td>
          <td>&#x1F310;<%= fabric.website %></td>
          <td>
            <button type="button" class="btn btn-link btn-sm btn-rounded">
              <a href="/fabricDetail/<%= fabric.id %>" class="btn btn-orange"> &#x1F441; </a>
            </button>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</main>
<%- include('./partials/footer') %>
