<%- include('./partials/header') %>
<main>
  <div class="col-sm p-lg-5 mx-auto my-5">
    <table class="table align-middle mb-0 bg-white table-hover">
      <thead class="bg-light">
        <tr>
          <th> </th>
          <th>naam</th>          
          <th>adres</th>
          <th>telefoon</th>
          <th>website</th>
        </tr>
      </thead>
      <tbody>
        <% fabrics.forEach(fabric => { %>
        <tr>
          <td>
            <div class="d-flex align-items-center">
              <img
                src="<%- fabric.foto %>"
                alt="image" class="rounded"
                style="width: 80px; height: 80px"
              />
              
            </div>
          </td>
          <td > <a href="/fabricDetail/<%= fabric.id %>" ><%- fabric.naam %> </a></td>
          <td >&#x1F3E3;<%- fabric.adres %></td>
          <td>&#9742; <%- fabric.telefoon %></td>
          <td>&#x1F310;<%- fabric.website %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</main>
<%- include('./partials/footer') %>
